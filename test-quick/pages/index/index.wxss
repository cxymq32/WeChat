.top{
  background-color: #39c3f2;
  position:fixed; 
  top:0px; 
  width: 100%;
  height: 40px;
  z-index: 9;
}
.distance{
  float: left;
  width: 20%;
  margin-left: 5px;
  font-size: 15px;
  color: #FFF;
  height: 30px;
  padding-top: 3px;
}
.location{
  float: left;
  margin-top: 4px;
  margin-right: 5px;
  width: 15px;
  height: 15px;
}
.shop{
  margin-top:40px;
  font-size: 15px;
}
.search{
  float: left;
  width: 75%;
  background-color: #FFF;
  height:30px;
  border-radius:15px;
  border: 1px solid #39c3f2;
}
.weui-icon-search{
  margin: 5px;
  display: inline-block;
}
.weui-icon-clear{
  padding-top: 2%;
  padding-right: 5px;
  float: right;
}
.top_input{
  width: 75%;
  display: inline-block;
}
.shop-cotent{
  display:inline-block;
  width:99%;
  border-bottom: 2px solid #CCC;
}
.shop-image{
  margin: 2px 5px;
  float: left;
  width:30%;
  height:70px;
}
.shop-introduce{
  float: left;
  width:60%;
  height:70px;
}
.shop-order{
  float: left;
  width:20%;
  height:70px;
}
.shop-image-i{
  width:100%;
  height:90%;
  border-radius: 5px;
}
.surplus{
  font-size: 10px;
}
.order{
  font-size:13px;
  margin-top:15px;
  margin-right: 5px;
  background-color: yellow;
  text-align:center;

}
.loading{
  text-align: center;
  color:#CCC;
  font-size: 10px;
  margin: 10px;
}
