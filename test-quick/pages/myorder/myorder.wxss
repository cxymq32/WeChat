.item{
display: inline-block;
width:99%;
border-bottom:2px solid #CCC;

}
.left{
  float: left;
  width: 20%;
  margin: 5px 5px;
}
.middle{
  margin: 5px 0px;
  float: left;
  width: 60%;
}
.right{
  float: left;
  width: 15%;
}
.cancel{
  height: 30px;
  font-size: 12px;
  margin-top: 15px;
}
.image{
  width: 100%;
  height: 50px;  
  border-radius: 5px;
}
.orderNum{
  font-size: 9px;
  margin-top: 2px;
  margin-left: 5px;
}
.shopName{
  font-size: 13px;
  margin-bottom: 2px;
}
.arriveTime{
  float: left;
  font-size: 10px;
  margin-right: 10px;
}
.peopleNum{
  float: left;
  margin-right: 10px;
  font-size: 10px;
}
.phone{
  float:left;
  font-size: 10px;
}
.confirm{
  border: 1px solid #ccc;
  padding: 5px 7px;
  border-radius: 5px;
  background: #F0F0F0;
  color: #696969;
}

