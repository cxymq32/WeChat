.item{
display: inline-block;
width:99%;
border-bottom:2px solid #CCC;

}
.left{
  display: inline-block;
  width: 20%;
  margin: 5px 5px;
}
.middle{
  margin: 5px 0px;
  display: inline-block;
  width: 60%;
}
.right{
  display: inline-block;
  width: 15%;
}
.cancelView{
  line-height: 100%;
  text-align: center;
  display: inline-table;
  font-size: 12px;
}
.image{
  width: 100%;
  height: 50px;  
  border-radius: 5px;
}
.orderNum{
  font-size: 9px;
  margin-top: 2px;
  margin-left: 5px;
  padding-bottom: 5px;
  color: #6699ff;
}
.shopName{
  font-size: 13px;
  margin-bottom: 2px;
  float: left;
}
.arriveTime{
  float: left;
  font-size: 10px;
  margin-right: 10px;
}
.time{
  color: #FF4040;
}
.peopleNum{
  float: left;
  margin-right: 10px;
  font-size: 10px;
}
.phone{
  float:left;
  font-size: 10px;
}
.cancel{
  float: left;
  border: 1px solid #EE0000;
  padding: 5px 5px;
  border-radius: 5px;
  background: #EE0000;
  color: #FFF;
}
.confirm{
  border: 1px solid #00CD00;
  padding: 5px 5px;
  border-radius: 5px;
  background: #00CD00;
  color: #FFF;
}
.canceled{
  border: 1px solid #ccc;
  padding: 5px 5px;
  border-radius: 5px;
  background: #F0F0F0;
  color: #696969;
}
.remark{
  font-size: 10px;
  margin-left: 5px;
  margin-bottom: 5px;
}

